
<p class="navbar">
<% if user_signed_in? %>

  <br>
  <ul >
    <% @posts.each do |post| %>
      <li class="navbar-item" >
        <p><%=post.created_at.strftime("%H:%M %F") %></p>
        <p><%= simple_format(post.message) %></p>
        <%= link_to "Delete", post_path(post), method: :delete,
        data: { confirm: "Are you sure you want to delete this post?" } %>
        <%= link_to "Edit", edit_post_path(post) %>
        <%= link_to 'like', likes_path(post) %>
        <%= link_to "Follow", post_path(post) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <%= link_to "Sign up", new_user_registration_path, :class => 'btn-sign'  %>
  <%= link_to "Login", new_user_session_path, :class => 'btn-sign'  %>
<% end %>
</p>
